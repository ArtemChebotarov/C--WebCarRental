@model Player
@{
    ViewData["Title"] = "Index";
}

<h2>List of Players</h2>

<table class="table">
	<thead>
		<tr>
			<th>Nazwisko</th>
			<th>Imie</th>
			<th>Data Urodzenia</th>
			<th>Zespol</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var pl in (IEnumerable<Player>)ViewBag.Players)
		{
		<tr>
			<td>@pl.LastName</td>
			<th>@pl.FirstName</th>
			<th>@pl.BirthDate.ToShortDateString()</th>
			<th>@pl.Team.Name</th>
		</tr>
		}
	</tbody>
</table>
<h2>Dodaj gracza</h2>
<form method="post" asp-action="Create">
	<div class="form-group">
		<label asp-for="FirstName"></label>
		<input class="form-control" asp-for="FirstName" />
		<span asp-validation-for="FirstName"></span>
	</div>
	<div class="form-group">
		<label asp-for="LastName"></label>
		<input class="form-control" asp-for="LastName" />
		<span asp-validation-for="LastName"></span>
	</div>
	<div class="form-group">
		<label asp-for="BirthDate"></label>
		<input class="form-control" type="date" asp-for="BirthDate" />
		<span asp-validation-for="BirthDate"></span>
	</div>
	<div class="form-group">
		<label asp-for="IdTeam"></label>
		<select asp-for="IdTeam" class="form-control" asp-items="@(new SelectList(ViewBag.Teams, "IdTeam", "Name"))"></select>
		
		
	</div>
	<input type="submit" value="Dodaj" />
</form>

